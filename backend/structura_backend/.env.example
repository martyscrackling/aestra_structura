# Django
DEBUG=1
SECRET_KEY=replace-me
ALLOWED_HOSTS=localhost,127.0.0.1

# Supabase Postgres (use the Supabase connection string; include sslmode=require)
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# Web deployment (Flutter web URL) - set in production
# If you're running Flutter Web locally (flutter run -d chrome), the origin is
# usually http://localhost:<random_port>. Use regex or the localhost flag below.
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# Optional: comma-separated regexes for allowed origins
# Example: ^http://localhost(:\d+)?$,^http://127\.0\.0\.1(:\d+)?$
CORS_ALLOWED_ORIGIN_REGEXES=

# Set to 1 to allow localhost/127.0.0.1 origins (handy for local Flutter Web).
CORS_ALLOW_LOCALHOST=0

# Set to 1 only if you explicitly want to allow all origins (not recommended).
CORS_ALLOW_ALL_ORIGINS=0

CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com

# Optional (usually keep enabled behind Render/Railway HTTPS)
SECURE_SSL_REDIRECT=1
